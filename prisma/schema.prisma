generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  ADMIN
}

enum ProfileStatus {
  DRAFT
  SUBMITTED
}

enum FieldType {
  TEXT
  TEXTAREA
  SINGLE_IMAGE
  MULTI_IMAGE
  DATE
}

enum Gender {
  MALE
  FEMALE
}

enum Salutation {
  HERR
  FRAU
}

enum GenderTarget {
  MALE
  FEMALE
  ALL
}

enum RankingQuestionType {
  STUDENT
  TEACHER
}

enum AnswerMode {
  SINGLE           // One person (replaces genderSpecific=false)
  GENDER_SPECIFIC  // One person per gender m/f (replaces genderSpecific=true)
  DUO              // Two different persons of the same type
}

enum RankingStatus {
  DRAFT
  SUBMITTED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  role      Role     @default(STUDENT)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile Profile?
  student Student?

  rankingVotes      RankingVote[]
  rankingSubmission RankingSubmission?
  teacherQuotes     TeacherQuote[]
  studentQuotes     StudentQuote[]
  surveyAnswers     SurveyAnswer[]
  commentsWritten   Comment[]     @relation("CommentsWritten")
  photos            Photo[]
  activities        StudentActivity[]

  @@map("users")
}

model Student {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String   @unique
  gender    Gender?
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    String?  @unique
  user      User?    @relation(fields: [userId], references: [id])

  rankingVotes     RankingVote[]  @relation("RankingVoteStudent1")
  rankingVotes2    RankingVote[]  @relation("RankingVoteStudent2")
  commentsReceived Comment[]      @relation("CommentsReceivedStudent")
  quotesAbout      StudentQuote[] @relation("QuotesAbout")

  @@map("students")
}

model Profile {
  id         String        @id @default(cuid())
  userId     String        @unique
  user       User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Profile image
  imageUrl      String?

  // Memory images (multiple photos)
  memoryImages  String[]  @default([])

  // Steckbrief fields (example fields, can be adjusted)
  quote         String?   @db.Text
  plansAfter    String?   @db.Text
  memory        String?   @db.Text

  // Status and workflow
  status     ProfileStatus @default(DRAFT)

  // Dynamic field values (new system)
  values     SteckbriefValue[]

  // Contact info for yearbook (separate from Steckbrief)
  contactEmail  String?
  contactPhone  String?
  contactInsta  String?

  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  @@map("profiles")
}

model SteckbriefField {
  id          String    @id @default(cuid())
  key         String    @unique
  type        FieldType
  label       String
  placeholder String?
  maxLength   Int?
  maxFiles    Int?      @default(3)
  rows        Int?      @default(4)
  required    Boolean   @default(false)
  order       Int
  active      Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  values      SteckbriefValue[]

  @@map("steckbrief_fields")
}

model SteckbriefValue {
  id          String  @id @default(cuid())
  profileId   String
  fieldId     String

  textValue   String?   @db.Text
  imageValue  String?
  imagesValue String[]  @default([])

  profile     Profile         @relation(fields: [profileId], references: [id], onDelete: Cascade)
  field       SteckbriefField @relation(fields: [fieldId], references: [id], onDelete: Restrict)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([profileId, fieldId])
  @@map("steckbrief_values")
}

model Teacher {
  id         String     @id @default(cuid())
  salutation Salutation
  firstName  String?
  lastName   String
  subject    String?
  active     Boolean    @default(true)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  rankingVotes     RankingVote[]  @relation("RankingVoteTeacher1")
  rankingVotes2    RankingVote[]  @relation("RankingVoteTeacher2")
  teacherQuotes    TeacherQuote[]
  commentsReceived Comment[]      @relation("CommentsReceivedTeacher")

  @@map("teachers")
}

model RankingQuestion {
  id         String              @id @default(cuid())
  text       String
  type       RankingQuestionType
  answerMode AnswerMode          @default(SINGLE)
  order      Int
  active     Boolean             @default(true)
  createdAt  DateTime            @default(now())
  updatedAt  DateTime            @updatedAt

  votes RankingVote[]

  @@map("ranking_questions")
}

model RankingVote {
  id           String       @id @default(cuid())
  voterId      String
  questionId   String
  genderTarget GenderTarget @default(ALL)
  studentId    String?
  teacherId    String?
  studentId2   String?
  teacherId2   String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  voter    User            @relation(fields: [voterId], references: [id])
  question RankingQuestion @relation(fields: [questionId], references: [id])
  student  Student?        @relation("RankingVoteStudent1", fields: [studentId], references: [id])
  teacher  Teacher?        @relation("RankingVoteTeacher1", fields: [teacherId], references: [id])
  student2 Student?        @relation("RankingVoteStudent2", fields: [studentId2], references: [id])
  teacher2 Teacher?        @relation("RankingVoteTeacher2", fields: [teacherId2], references: [id])

  @@unique([voterId, questionId, genderTarget])
  @@map("ranking_votes")
}

model TeacherQuote {
  id        String   @id @default(cuid())
  text      String   @db.VarChar(500)
  teacherId String
  userId    String
  createdAt DateTime @default(now())

  teacher Teacher @relation(fields: [teacherId], references: [id])
  user    User    @relation(fields: [userId], references: [id])

  @@index([teacherId])
  @@index([userId])
  @@map("teacher_quotes")
}

model StudentQuote {
  id        String   @id @default(cuid())
  text      String   @db.VarChar(500)
  studentId String
  userId    String
  createdAt DateTime @default(now())

  student Student @relation("QuotesAbout", fields: [studentId], references: [id])
  user    User    @relation(fields: [userId], references: [id])

  @@index([studentId])
  @@index([userId])
  @@map("student_quotes")
}

model RankingSubmission {
  id          String        @id @default(cuid())
  userId      String        @unique
  status      RankingStatus @default(DRAFT)
  submittedAt DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map("ranking_submissions")
}

model SurveyQuestion {
  id        String   @id @default(cuid())
  text      String
  order     Int
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  options SurveyOption[]
  answers SurveyAnswer[]

  @@map("survey_questions")
}

model SurveyOption {
  id         String   @id @default(cuid())
  text       String
  order      Int
  questionId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  question SurveyQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
  answers  SurveyAnswer[]

  @@map("survey_options")
}

model SurveyAnswer {
  id         String   @id @default(cuid())
  userId     String
  questionId String
  optionId   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user     User           @relation(fields: [userId], references: [id])
  question SurveyQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
  option   SurveyOption   @relation(fields: [optionId], references: [id], onDelete: Cascade)

  @@unique([userId, questionId])
  @@map("survey_answers")
}

model AppSettings {
  id       String    @id @default(cuid())
  deadline DateTime?

  @@map("app_settings")
}

model PhotoCategory {
  id            String   @id @default(cuid())
  name          String
  description   String?
  coverImageUrl String?
  maxPerUser    Int      @default(5)
  order         Int
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  photos        Photo[]

  @@map("photo_categories")
}

model Photo {
  id         String        @id @default(cuid())
  imageUrl   String
  categoryId String
  userId     String
  createdAt  DateTime      @default(now())

  category   PhotoCategory @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  user       User          @relation(fields: [userId], references: [id])

  @@index([categoryId])
  @@index([userId])
  @@map("photos")
}

model Comment {
  id        String   @id @default(cuid())
  text      String   @db.VarChar(500)
  authorId  String

  targetStudentId String?
  targetTeacherId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  author        User     @relation("CommentsWritten", fields: [authorId], references: [id])
  targetStudent Student? @relation("CommentsReceivedStudent", fields: [targetStudentId], references: [id])
  targetTeacher Teacher? @relation("CommentsReceivedTeacher", fields: [targetTeacherId], references: [id])

  @@unique([authorId, targetStudentId])
  @@unique([authorId, targetTeacherId])
  @@index([authorId])
  @@index([targetStudentId])
  @@index([targetTeacherId])
  @@map("comments")
}

model AuditLog {
  id         String   @id @default(cuid())
  alias      String?  // Admin nickname or null for "Unbekannt"
  action     String   // CREATE, UPDATE, DELETE, IMPORT, REORDER, SETTINGS
  entity     String   // Student, Teacher, RankingQuestion, etc.
  entityId   String?  // ID of affected object
  entityName String?  // Human-readable name (e.g. "Max Mustermann")
  success    Boolean  @default(true)
  oldValues  Json?    // Previous values
  newValues  Json?    // New values
  error      String?  // Error message if success=false
  count      Int      @default(1) // Number of grouped actions
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt // Last time this group was updated

  @@index([createdAt])
  @@index([updatedAt])
  @@index([entity])
  @@map("audit_logs")
}

model StudentActivity {
  id         String   @id @default(cuid())
  userId     String
  action     String   // SUBMIT, RETRACT, CREATE, COMPLETE
  entity     String   // Steckbrief, Rankings, TeacherQuote, StudentQuote, Comment, Photo, Survey
  entityName String?  // e.g. "Hr. MÃ¼ller", "Max Mustermann", "Abistreich"
  count      Int      @default(1)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@index([createdAt])
  @@index([updatedAt])
  @@map("student_activities")
}

model AdminAlias {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())

  @@map("admin_aliases")
}
