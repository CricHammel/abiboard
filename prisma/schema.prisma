generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  ADMIN
}

enum ProfileStatus {
  DRAFT
  SUBMITTED
  APPROVED
}

enum FieldType {
  TEXT
  TEXTAREA
  SINGLE_IMAGE
  MULTI_IMAGE
}

enum Gender {
  MALE
  FEMALE
}

enum Salutation {
  HERR
  FRAU
}

enum GenderTarget {
  MALE
  FEMALE
  ALL
}

enum RankingQuestionType {
  STUDENT
  TEACHER
}

enum RankingStatus {
  DRAFT
  SUBMITTED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  role      Role     @default(STUDENT)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile Profile?
  student Student?

  rankingVotes      RankingVote[]
  rankingSubmission RankingSubmission?

  @@map("users")
}

model Student {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String   @unique
  gender    Gender?
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    String?  @unique
  user      User?    @relation(fields: [userId], references: [id])

  rankingVotes RankingVote[]

  @@map("students")
}

model Profile {
  id         String        @id @default(cuid())
  userId     String        @unique
  user       User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Profile image
  imageUrl      String?

  // Memory images (multiple photos)
  memoryImages  String[]  @default([])

  // Steckbrief fields (example fields, can be adjusted)
  quote         String?   @db.Text
  plansAfter    String?   @db.Text
  memory        String?   @db.Text

  // Status and workflow
  status     ProfileStatus @default(DRAFT)
  feedback   String?       @db.Text

  // Dynamic field values (new system)
  values     SteckbriefValue[]

  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  @@map("profiles")
}

model SteckbriefField {
  id          String    @id @default(cuid())
  key         String    @unique
  type        FieldType
  label       String
  placeholder String?
  maxLength   Int?
  maxFiles    Int?      @default(3)
  rows        Int?      @default(4)
  required    Boolean   @default(false)
  order       Int
  active      Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  values      SteckbriefValue[]

  @@map("steckbrief_fields")
}

model SteckbriefValue {
  id          String  @id @default(cuid())
  profileId   String
  fieldId     String

  textValue   String?   @db.Text
  imageValue  String?
  imagesValue String[]  @default([])

  profile     Profile         @relation(fields: [profileId], references: [id], onDelete: Cascade)
  field       SteckbriefField @relation(fields: [fieldId], references: [id], onDelete: Restrict)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([profileId, fieldId])
  @@map("steckbrief_values")
}

model Teacher {
  id         String     @id @default(cuid())
  salutation Salutation
  firstName  String?
  lastName   String
  subject    String?
  active     Boolean    @default(true)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  rankingVotes RankingVote[]

  @@map("teachers")
}

model RankingQuestion {
  id             String              @id @default(cuid())
  text           String
  type           RankingQuestionType
  genderSpecific Boolean             @default(false)
  order          Int
  active         Boolean             @default(true)
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt

  votes RankingVote[]

  @@map("ranking_questions")
}

model RankingVote {
  id           String       @id @default(cuid())
  voterId      String
  questionId   String
  genderTarget GenderTarget @default(ALL)
  studentId    String?
  teacherId    String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  voter    User            @relation(fields: [voterId], references: [id])
  question RankingQuestion @relation(fields: [questionId], references: [id])
  student  Student?        @relation(fields: [studentId], references: [id])
  teacher  Teacher?        @relation(fields: [teacherId], references: [id])

  @@unique([voterId, questionId, genderTarget])
  @@map("ranking_votes")
}

model RankingSubmission {
  id          String        @id @default(cuid())
  userId      String        @unique
  status      RankingStatus @default(DRAFT)
  submittedAt DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map("ranking_submissions")
}
